<Page
    x:Class="Ferest_Messenger.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ferest_Messenger"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:ConnectionId='1' x:Name="None">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="seters.Width" Value="10"/>
                        <Setter Target="Menu1txtblk.FontSize" Value="17"/>
                        <Setter Target="Menu1txtblk.Margin" Value="16,38,0,0"/>
                        <Setter Target="Menu2txtblk.FontSize" Value="17"/>
                        <Setter Target="Menu2txtblk.Margin" Value="128,38,0,0"/>
                        <Setter Target="Menu3txtblk.FontSize" Value="17"/>
                        <Setter Target="Menu3txtblk.Margin" Value="237,38,0,0"/>
                        <Setter Target="Topmenu.Height" Value="70"/>
                        <Setter Target="TopMessage.Height" Value="70"/>
                        <Setter Target="Message.Margin" Value="-5,38,-12,459"/>
                        <Setter Target="Message.Height" Value="80"/>
                        <Setter Target="MenuSelect.Margin" Value="132,63,0,0"/>
                        <Setter Target="Messagecontacttxt.FontSize" Value="19"/>
                        <Setter Target="Messagetxt.FontSize" Value="14"/>
                        <Setter Target="Messagetxt.Margin" Value="22,115,0,480"/>
                        <Setter Target="MessageMenu.Margin" Value="0,0,0,0"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='2' x:Name="Compact">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="480"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="seters.Width" Value="10"/>
                        <Setter Target="Message.MinWidth" Value="480"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='3' x:Name="Wide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="720"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="seters.Width" Value="50"/>
                        <Setter Target="Message.Width" Value="480"/>
                        <Setter Target="MessageMenu.Margin" Value="380,0,0,0"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='4' x:Name="UWide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1024"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="seters.Width" Value="80"/>
                        <Setter Target="Message.Width" Value="480"/>
                        <Setter Target="MessageMenu.Margin" Value="380,0,0,0"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>

        </VisualStateManager.VisualStateGroups>
        <StackPanel>
            <StackPanel.Resources>
                <Storyboard x:ConnectionId='33' x:Name="MoveFirstelement">
                    <RepositionThemeAnimation Storyboard.TargetName="FirstShortcut"
                                              FromHorizontalOffset="100"
                                              AutoReverse="False"/>
                </Storyboard>

                <Storyboard x:ConnectionId='34' x:Name="MoveSecondelement">
                    <RepositionThemeAnimation Storyboard.TargetName="SecondShortcut"
                                              FromHorizontalOffset="100"
                                              AutoReverse="False"/>
                </Storyboard>

                <Storyboard x:ConnectionId='35' x:Name="MoveThirdelement">
                    <RepositionThemeAnimation Storyboard.TargetName="ThirdShortcut"
                                              FromHorizontalOffset="100"
                                              AutoReverse="False"/>
                </Storyboard>

                <Storyboard x:ConnectionId='36' x:Name="MoveHolderelement">
                    <RepositionThemeAnimation Storyboard.TargetName="ShortCutHolder"
                                              FromHorizontalOffset="100"
                                              AutoReverse="False"/>
                </Storyboard>

                <Storyboard x:ConnectionId='37' x:Name="HideHolderelement">
                    <RepositionThemeAnimation Storyboard.TargetName="ShortCutHolder"
                                              FromHorizontalOffset="0"
                                              AutoReverse="False"/>
                </Storyboard>

                <Storyboard x:ConnectionId='38' x:Name="FloatSelect1">
                    <RepositionThemeAnimation Storyboard.TargetName="MenuSelect"
                                              FromHorizontalOffset="50"
                                              AutoReverse="False"/>
                </Storyboard>

                <Storyboard x:ConnectionId='39' x:Name="FloatSelect2">
                    <RepositionThemeAnimation Storyboard.TargetName="MenuSelect"
                                              FromHorizontalOffset="-50"
                                              AutoReverse="False"/>
                </Storyboard>

                <Storyboard x:ConnectionId='40' x:Name="HideMenu">
                    <RepositionThemeAnimation Storyboard.TargetName="MainMenu"
                                              FromHorizontalOffset="0"
                                              AutoReverse="False"/>
                </Storyboard>

                <Storyboard x:ConnectionId='41' x:Name="ShowMenu">
                    <RepositionThemeAnimation Storyboard.TargetName="MainMenu"
                                              FromHorizontalOffset="400"
                                              AutoReverse="False"/>
                </Storyboard>

                <Storyboard x:ConnectionId='42' x:Name="HideMessageMenu">
                    <RepositionThemeAnimation Storyboard.TargetName="MessageMenu"
                                              FromHorizontalOffset="0"
                                              AutoReverse="False"/>
                </Storyboard>

                <Storyboard x:ConnectionId='43' x:Name="ShowMessageMenu">
                    <RepositionThemeAnimation Storyboard.TargetName="MessageMenu"
                                              FromHorizontalOffset="400"
                                              AutoReverse="False"/>
                </Storyboard>

            </StackPanel.Resources>
        </StackPanel>
        <Grid x:ConnectionId='5' x:Name="MainMenu">
            <Grid x:ConnectionId='11' x:Name="Messages" Height="640" VerticalAlignment="Top">
                <Rectangle x:ConnectionId='29' x:Name="Message"                         Height="100" Fill="White" Margin="-5,81,-12,459" Stroke="#FFCBCBCB" HorizontalAlignment="Left" Width="377"/>
                <TextBlock x:ConnectionId='30' x:Name="Messagecontacttxt"                         Text="Ferest Messenger" Width="200" Height="35" FontSize="24" FontFamily="Assets/Fonts/SourceSansPro.ttf#Source Sans Pro" Foreground="#FF25A283" Margin="22,89,0,516" HorizontalAlignment="Left"/>
                <TextBlock x:ConnectionId='31' x:Name="Messagetxt"                         Text="Hey there! welcome to Ferest messenger!" Width="328" Height="35" FontSize="16" FontFamily="Assets/Fonts/SourceSansPro.ttf#Source Sans Pro" Foreground="#FF5B5B5B" Margin="22,125,0,480" HorizontalAlignment="Left"/>
                <Rectangle x:ConnectionId='32' x:Name="seters" Width="10" Height="10" Visibility="Collapsed"/>
            </Grid>

            <Grid x:ConnectionId='12' x:Name="Contacts">
                <Rectangle x:ConnectionId='26' x:Name="SearchContacts"                                Fill="#FF25A283" Width="92" Height="30" Margin="123,89,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBlock x:ConnectionId='27' x:Name="SearchContactstxtblk"                                Text="Search" Width="69" FontSize="14" FontFamily="Assets/Fonts/SourceSansPro.ttf#Source Sans Pro" Foreground="White" Margin="146,97,0,0" HorizontalAlignment="Left" Height="26" VerticalAlignment="Top"/>
                <ListView x:ConnectionId='28' x:Name="ContactsList" HorizontalAlignment="Left" Height="254" Margin="10,236,0,0" VerticalAlignment="Top" Width="208" Foreground="Black" Background="Red" ScrollViewer.HorizontalScrollBarVisibility="Auto"/>

            </Grid>

            <Grid x:ConnectionId='13' x:Name="Menu" Height="84" VerticalAlignment="Top">
                <Rectangle x:ConnectionId='20' x:Name="Background" Fill="White"/>
                <Rectangle x:ConnectionId='21' x:Name="Topmenu" Fill="#25a283" Height="84" VerticalAlignment="Top"/>
                <TextBlock x:ConnectionId='22' x:Name="Menu1txtblk"                             FontSize="20" Text="Messages" FontFamily="Assets/Fonts/SourceSansPro.ttf#Source Sans Pro" Foreground="White" SelectionHighlightColor="{x:Null}" Margin="16,48,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="86" />
                <TextBlock x:ConnectionId='23' x:Name="Menu2txtblk"                             FontSize="20" Text="Contacts" FontFamily="Assets/Fonts/SourceSansPro.ttf#Source Sans Pro" Foreground="White" SelectionHighlightColor="{x:Null}" Margin="136,48,0,0" Height="30" VerticalAlignment="Top"                                                 HorizontalAlignment="Left" Width="86" />
                <TextBlock x:ConnectionId='24' x:Name="Menu3txtblk"                             FontSize="20" Text="My Posts" FontFamily="Assets/Fonts/SourceSansPro.ttf#Source Sans Pro" Foreground="White" SelectionHighlightColor="{x:Null}" Margin="265,48,0,0" Height="30" VerticalAlignment="Top"                                                 HorizontalAlignment="Left" Width="86" />
                <Rectangle x:ConnectionId='25' x:Name="MenuSelect" Fill="White" Width="60" Height="6" Margin="144,77,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </Grid>

            <Grid x:ConnectionId='14' x:Name="ShortcutVisible">
                <Ellipse x:ConnectionId='16' x:Name="ShortCutHolder" Fill="#FF1B816C" Height="267" Margin="0,184,-132,0" VerticalAlignment="Top" Opacity="0.5" HorizontalAlignment="Right" Width="267"/>
                <Image x:ConnectionId='17' x:Name="FirstShortcut" Source="Assets/Contacts.png" Margin="0,192,0,0" HorizontalAlignment="Right" Width="71" Height="73" VerticalAlignment="Top" />
                <Image x:ConnectionId='18' x:Name="SecondShortcut" Source="Assets/NewMessage.png" Margin="0,288,67,0" HorizontalAlignment="Right" Width="61" Height="64" VerticalAlignment="Top" />
                <Image x:ConnectionId='19' x:Name="ThirdShortcut" Source="Assets/Friends.png" Margin="0,365,0,0" HorizontalAlignment="Right" Width="71" Height="73" VerticalAlignment="Top" />
            </Grid>
            <Image x:ConnectionId='15' x:Name="ShortcutCollapsed" Height="106" Margin="0,269,-89,0" VerticalAlignment="Top" Source="Assets/Shrotcutc.png" HorizontalAlignment="Right" Width="112"                                                                                                  />
        </Grid>
        <Grid x:ConnectionId='6' x:Name="MessageMenu" Visibility="Collapsed">
            <Image x:ConnectionId='7' x:Name="BGMessage" Source="Assets/Bg.jpg" Stretch="UniformToFill"/>
            <Rectangle x:ConnectionId='8' x:Name="TopMessage" Fill="#25a283" Height="84" VerticalAlignment="Top"/>
            <TextBlock x:ConnectionId='9' x:Name="ContactNametxtblk" FontSize="20" Text="Ferest Messenger" FontFamily="Assets/Fonts/SourceSansPro.ttf#Source Sans Pro" Foreground="White" SelectionHighlightColor="{x:Null}" Margin="65,34,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="151" />
            <Image x:ConnectionId='10' x:Name="Backbtn"                         Source="Assets/Back.png" Margin="10,30,0,0" HorizontalAlignment="Left" Width="50" Height="34" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</Page>

